# Fraud Detection Service Configuration

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/fraud-detection
DB_NAME=fraud_detection

# Fraud Detection Thresholds (0-100)
FRAUD_FLAG_THRESHOLD=30
FRAUD_REVIEW_THRESHOLD=50
FRAUD_BLOCK_THRESHOLD=80

# Velocity Check Configuration
VELOCITY_WINDOW_MS=3600000
VELOCITY_MAX_ATTEMPTS=5

# Amount Anomaly Configuration
AMOUNT_ANOMALY_WINDOW_MS=86400000
AMOUNT_ANOMALY_MULTIPLIER=3

# Geographic Anomaly Configuration
GEO_ANOMALY_WINDOW_MS=86400000
GEO_ANOMALY_MAX_LOCATIONS=2

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/fraud-detection.log

# Application Configuration
NODE_ENV=development
PORT=3000

# AI Configuration
GROQ_API_KEY="YOUR_GROQ_APIKEY"
GROQ_API_URL=https://api.groq.com/openai/v1/chat/completions
AI_MODEL=meta-llama/llama-4-scout-17b-16e-instruct
AI_FRAUD_ANALYSIS_ENABLED=true
AI_CONFIDENCE_THRESHOLD=0.7
